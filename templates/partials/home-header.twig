<header class="home-header">
    <div class="swiper">
        <div class="swiper-wrapper">
            {% for slide in post.meta('slider_slide_group') %}
                <div class="swiper-slide">
                    <div class="text-overlay">
                        <p class="pre-title">{{ slide.pre_title_text }}</p>
                        <h1 class="main-title">{{ slide.main_title_text }}</h1>
                        <p class="sub-paragraph">{{ slide.sub_title_paragraph }}</p>
                    </div>

                    <img
                        class="slide-image"
                        src="{{ slide.slide_image.url }}"
                        alt="{{ slide.slide_image.alt }}"
                    />
                </div>
            {% endfor %}
        </div> {# /.swiper-wrapper #}

        <div class="slider-navigation">
            <span class="swiper-pagination"></span>

            <button class="swiper-pause-button" title="Pause Slideshow" aria-label="Pause Slideshow">
                <span class="fa-regular fa-circle-pause"></span>
            </button>

            <button class="swiper-play-button" title="Start Slideshow" aria-label="Start Slideshow">
                <span class="fa-regular fa-circle-play"></span>
            </button>

            <div class="autoplay-progress">
                Next slide in: <span></span>
            </div>

            <button class="swiper-button-prev"></button>
            <button class="swiper-button-next"></button>
        </div>
    </div> {# /.swiper #}
</header>
